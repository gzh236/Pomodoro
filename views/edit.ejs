<%- include ('./partials/header.ejs') -%>

<!-- newForm -->

<div class="container">
    <form method="POST" action="/todos/<%= todo.slug %>?_method=PATCH">
         <label for="name" class="form-label"></label>
         <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="<%= todo.name %>"
        />
        
    <div class="mb-3">
    <label for="description" class="form-label"></label>
    <input
      type="text"
      class="form-control"
      id="description"
      name="description"
      value="<%= todo.description %>"
    ></input>
    </div>

    <div class="mb-3">
        <label for="duration" class="form-label"></label>
        <select name="duration" id="duration" class="form-select">
            <option value="" selected>Duration of task (in minutes)</option>
            <option value="0.5">0.5</option>
            <option value="30">30</option>
            <option value="45">45</option>
            <option value="60">60</option>                
            <option value="90">90</option>
         </select>
     </div>
     <button type="submit" id="add-task-btn" class="btn btn-primary">Edit Task</button>
    </form>
</div>

<%- include ('./partials/footer.ejs') -%>
