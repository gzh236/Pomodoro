<%- include('./partials/header.ejs') %> <%- include('./partials/timer.ejs'),
{todoStartTime, todoDuration, todo, todoPauseTime} %>

<div class="container">
  <div id="pomodoro">
    <h3 id="timer-display"></h3>
  </div>
  <div class="btn-group">
    <form method="POST" action="/todos/<%= todo.slug %>/pause?_method=PATCH">
      <button id="pause-btn" class="btn btn-outline-warning" type="submit">
        Pause
      </button>
    </form>
    <form method="POST" action="/todos/<%= todo.slug %>/resume?_method=PATCH">
      <button id="resume-btn" class="btn btn-outline-success" type="submit">
        Resume
      </button>
    </form>
    <form method="POST" action="/todos/<%= todo.slug %>/delete?_method=DELETE">
      <button id="complete-btn" class="btn btn-outline-danger" type="submit">
        Complete
      </button>
    </form>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
